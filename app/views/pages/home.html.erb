<div class="banner" mb-5>
  <div class="banner-content">
    <%= image_tag "landing-map.png", class: "banner-image" %>
    <h1>Track your shipments with OST</h1>
    <%= link_to "Track now", shipments_path, class: "btn btn-primary" %>
  </div>
</div>

<div class="row cards-container gx-3 gy-5">
  <% @projects.each do |project| %>
    <div class="col-4">
    <%= link_to shipments_path do %>
      <div class="card">
        <%= image_tag "truck.jpg", class: "card-image" %>
        <div class="container card-text-not-bootstrap">
          <h4><b><%= project.name %></b></h4>
        </div>
      </div>
    <% end %>
    </div>
  <% end %>
</div>
