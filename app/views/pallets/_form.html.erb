<%= simple_form_for [shipment, pallet] do |f| %>
  <%= f.input :content %>
  <%= f.input :content_category, as: :select, collection: Pallet::CATEGORIES %>
  <div class="mb-3">
    <label class="form-label" for="count">Count</label>
    <input class="form-control" type="number" id="count" name="count" min="1" max="40">
  </div>
  <%= f.association :donor, collection: User.donor, label_method: :full_name %>
  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>
